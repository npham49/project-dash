generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @default(cuid())
  kindeId   String    @id @unique
  email     String    @unique
  tier      String    @default("free")
  firstName String?
  lastName  String?
  username  String?
  projects  Project[]
  notes     Note[]
}

model Project {
  id          String   @id @default(cuid())
  title       String
  description String
  userKindeId String
  labels      Json?
  columnIndex Int      @default(0)
  status      Status   @default(idea)
  createdDate DateTime @default(now())
  interest    Interest @default(medium)
  note        Note?
  user        User     @relation(fields: [userKindeId], references: [kindeId])
}

model Note {
  id          String   @id @default(cuid())
  content     Json?
  createdDate DateTime @default(now())
  userKindeId String
  project     Project  @relation(fields: [projectId], references: [id])
  user        User     @relation(fields: [userKindeId], references: [kindeId])
  projectId   String   @unique
}

enum Status {
  idea
  brainstorm
  building
  launched
  afterLaunch
}

enum Interest {
  low
  medium
  high
}
